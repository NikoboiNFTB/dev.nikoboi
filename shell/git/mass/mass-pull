#!/usr/bin/env bash

set -e

# This is used for the Hang at the end, for disabling it.
SCRIPT_PATH=$(readlink -f "${BASH_SOURCE[0]}")

for author in */; do
    [ -d "$author" ] || continue
    for repo in "$author"*/; do
        if [ -d "$repo/.git" ]; then
            echo "Pulling $repo"
            (
                cd "$repo" || exit 1
                output=$(git pull 2>&1)
                status=$?
                if [ "$status" -eq 0 ]; then
                    if printf '%s\n' "$output" | grep -q "^Already up to date\."; then
                        echo "Already up to date: $repo"
                    else
                        echo "Successfully pulled $repo"
                    fi
                else
                    echo "Failed to pull $repo"
                    printf '%s\n' "$output"
                fi
            ) &
        fi
    done
done

echo

wait

# Hang

KEEP_OPEN=true

if [ "$KEEP_OPEN" = true ]; then
    echo
    read -p "Press 'Enter' to exit / Type 'disable' to disable hanging (local only): " response
    if [ "$response" = "disable" ]; then
        sed -i 's/^KEEP_OPEN=true/KEEP_OPEN=false/' "$SCRIPT_PATH"
        echo
        echo "KEEP_OPEN set to false"
        echo "Change 'KEEP_OPEN=true' to enable"
        echo
        for i in {5..1}; do
            echo -n "Exiting in $i..."
            sleep 1
            echo -ne "\r"
        done
        echo "Exiting now.        "
    fi
fi
